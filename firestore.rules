rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId || 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Programs
    match /programs/{programId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // Subcollections: modules
      match /modules/{moduleId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        
        // Subcollections: lessons
        match /lessons/{lessonId} {
          allow read: if request.auth != null;
          allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        }
        
        // Subcollections: quizzes
        match /quizzes/{quizId} {
          allow read: if request.auth != null;
          allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
        }
      }
    }
    
    // Evaluations (NOUVEAU)
    match /evaluations/{evaluationId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // User Evaluation Attempts (NOUVEAU)
    match /userEvaluationAttempts/{attemptId} {
      allow read: if request.auth != null && 
                    (resource.data.userId == request.auth.uid ||
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // User Progress (pour le tracking de progression)
    match /userProgress/{progressId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                     (request.resource.data.userId == request.auth.uid ||
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Categories (Rôles Métier)
    match /categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Quiz Attempts
    match /quizAttempts/{attemptId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // AI Exercises
    match /aiExercises/{exerciseId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
